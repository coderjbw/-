.search-bar{
  position: relative;
  height: 90rpx;
  background-color: rgb(59, 63, 68);
  line-height: 90rpx;
}
.selectcity{
  color: #ffffff;
  font-size: 26rpx;
  padding-left: 20rpx;
}
.split{
  margin-left: 15rpx;
  color: #f5f5f5;
}
.input1{
  position: absolute;
  padding-left: 10rpx;
  top: 19rpx;
  left: 160rpx;
  font-size: 35rpx;
  color: #f5f5f5;
}
.cityselect{
  position: relative;
}
.currentcity{
  font-size: 30rpx;
  padding: 10rpx 20rpx;
}
.hotcity{
  font-size: 23rpx;
  color:#aaa;
  background-color: #eee;
  padding: 10rpx 20rpx;
}
.hotcityitems{
  display: flex;
  flex-wrap: wrap;
  
}
.hotcityitem{
  width: 100rpx;
  height: 60rpx;
  text-align: center;
  font-size: 25rpx;
  margin: 20rpx 0;
  margin-left: 40rpx;
  line-height: 60rpx;
  border: 1rpx solid #eee;
}
.cityalp{
  font-size: 23rpx;
  color:#aaa;
  background-color: #eee;
  padding: 10rpx 20rpx;
}
.cityname{
  font-size: 30rpx;
  padding: 30rpx 40rpx;
  color:#555;
  border-bottom: 1rpx solid #eee;
}
.sortalp{
  position: fixed;
  top:150rpx;
  right: 0rpx;
  bottom: 0rpx;
  width: 60rpx;
  font-size: 26rpx;
  text-align: center;
}
.sortalpitem{
  height: 12px;
  line-height: 12px;
  text-align: center;
}
.showalp{
  width: 150rpx;
  height: 150rpx;
  text-align: center;
  line-height: 150rpx;
  font-size: 80rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  box-shadow:0 0 150rpx rgba(0, 0, 0, 0.35);
  margin: auto;
  color: #333;
  position: fixed;
  top: 420rpx;
  left: 310rpx;
  z-index:3;
}
